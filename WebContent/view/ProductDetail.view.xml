<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="smax.batch31.A2.controller.ProductDetail" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	        <VBox>
		 <items>
	         <Text text="{ProductID}" id="idprod"/>
	         <Text text="{Name}" id="idName"/>
	          <Text text="{Category}"/>
	          <Text text="{Typecode}"/>
	          <Link text="{Description}"/>
	     </items>
	     </VBox> 
		</content>
		<footer>
		   <Bar>
		      <contentRight>
		          <Button text="Create" press="onCreate"/>
		          <Button text="Update" press="onUpdate"/>
		      </contentRight>
		   </Bar>
		</footer>
	</Page>
</core:View>